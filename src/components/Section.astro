---
// Section.astro
// Componente contenedor para secciones de contenido

interface Props {
  title?: string;
  subtitle?: string;
  backgroundColor?: 'white' | 'gray' | 'blue';
  className?: string;
}

const {
  title,
  subtitle,
  backgroundColor = 'white',
  className = ''
} = Astro.props;

const bgClasses = {
  white: 'bg-white',
  gray: 'bg-gray-50',
  blue: 'bg-blue-50'
};
---

<section class={`py-16 ${bgClasses[backgroundColor]} ${className}`}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    {(title || subtitle) && (
      <div class="text-center mb-12">
        {title && (
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            {title}
          </h2>
        )}
        {subtitle && (
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            {subtitle}
          </p>
        )}
      </div>
    )}
    <slot />
  </div>
</section>

