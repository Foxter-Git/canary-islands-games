---
// CTAButton.astro
// Componente reutilizable para botones de llamada a la acci√≥n

interface Props {
  text: string;
  url: string;
  variant?: 'primary' | 'secondary';
  size?: 'sm' | 'md' | 'lg';
}

const { 
  text, 
  url, 
  variant = 'primary',
  size = 'md'
} = Astro.props;

const variantClasses = {
  primary: 'bg-blue-600 hover:bg-blue-700 text-white',
  secondary: 'bg-gray-200 hover:bg-gray-300 text-gray-900'
};

const sizeClasses = {
  sm: 'py-2 px-4 text-sm',
  md: 'py-3 px-6 text-base',
  lg: 'py-4 px-8 text-lg'
};
---

<a 
  href={url}
  class={`inline-block font-semibold rounded-lg transition-colors ${variantClasses[variant]} ${sizeClasses[size]}`}
>
  {text}
</a>

